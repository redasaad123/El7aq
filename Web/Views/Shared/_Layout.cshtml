@using Microsoft.AspNetCore.Identity
@using Core.Entities
@using Infrastructure.Services
@inject SignInManager<AppUsers> SignInManager
@inject UserManager<AppUsers> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - El7aq</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/css/authstyle.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/homepage.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Web.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
</head>
<body>
    <!-- Header -->
    <header class="header">
        <nav class="nav">
            <a class="logo" asp-area="" asp-controller="Home" asp-action="Index">
                <img src="~/images/elhaq.jpg" alt="El7aq Logo" />
                El7aq
            </a>

            <ul class="nav-links">
                <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                <li><a asp-controller="Home" asp-action="About">About</a></li>
                <li><a href="#contact">Contact</a></li>
                
                @if (SignInManager.IsSignedIn(User))
                {
                    var userRole = User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value ?? "Passenger";
                    
                    @if (userRole == "Staff")
                    {
                        <li><a asp-controller="Staff" asp-action="Home">Dashboard</a></li>
                        <li><a asp-controller="Staff" asp-action="ListDrivers">Drivers</a></li>
                        <li><a asp-controller="Staff" asp-action="ViewTrips">Trips</a></li>
                    }
                    else if (userRole == "Manager")
                    {
                        <li><a asp-controller="Manager" asp-action="ManagerHome">Dashboard</a></li>
                        <li><a asp-controller="Manager" asp-action="StaffReports">Staff</a></li>
                        <li><a asp-controller="Manager" asp-action="DriverReports">Drivers</a></li>
                    }
                    else if (userRole == "Driver")
                    {
                        <li><a asp-controller="Driver" asp-action="Home">Dashboard</a></li>
                    }
                    else if (userRole == "Passenger")
                    {
                        <li><a asp-controller="Passenger" asp-action="SearchTrips">Search Trips</a></li>
                        <li><a asp-controller="Passenger" asp-action="History">My Trips</a></li>
                    }
                }
            </ul>

            <!-- Authentication Section -->
            <div class="auth-section">
                <!-- Dark Mode Toggle - Available to all users -->
                <div class="dark-mode-toggle">
                    <button id="headerDarkModeToggle" class="btn btn-outline" style="padding: 0.5rem; border-radius: 50%; width: 40px; height: 40px; display: flex; align-items: center; justify-content: center;">
                        <i class="fas fa-moon" id="darkModeIcon"></i>
                    </button>
                </div>

                @if (SignInManager.IsSignedIn(User))
                {
                    <div class="user-menu">
                        
                        <!-- Notifications -->
                        @{
                            var notificationService = Context.RequestServices.GetService<INotificationService>();
                            var userManager = Context.RequestServices.GetService<UserManager<Core.Entities.AppUsers>>();
                            var user = await userManager.GetUserAsync(User);
                            var unreadCount = user != null ? await notificationService.GetUnreadCountAsync(user.Id) : 0;
                        }

                        <!-- Notifications -->
                        <div class="notification-icon">
                            <a asp-controller="Notification" asp-action="Index" class="notification-btn position-relative">
                                <i class="fas fa-bell fa-lg"></i>
                                @if (unreadCount > 0)
                                {
                                    <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                                        @unreadCount
                                    </span>
                                }
                            </a>
                        </div>

                        @{
                            var userRole = User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value ?? "Passenger";
                            var profileController = "Passenger";
                            var profileAction = "Profile";
                            
                            if (userRole == "Manager")
                            {
                                profileController = "Manager";
                                profileAction = "Profile";
                            }
                            else if (userRole == "Driver")
                            {
                                profileController = "Driver";
                                profileAction = "Account";
                            }
                            else if (userRole == "Staff")
                            {
                                profileController = "Staff";
                                profileAction = "Profile";
                            }
                        }
                        
                        <a asp-controller="@profileController" asp-action="@profileAction" title="My Profile">
                            <!-- User Profile -->
                            <div class="user-profile">
                                <div class="profile-photo">
                                    <img src="~/images/user-286.png" alt="Profile" class="profile-img">
                                </div>
                                <div class="user-info">
                                    <span class="user-name">@User.FindFirst("FirstName")?.Value @User.FindFirst("LastName")?.Value</span>
                                    <span class="user-role">@userRole</span>
                                </div>
                                <div class="profile-dropdown">
                                    <i class="fas fa-chevron-down"></i>
                                </div>
                            </div>

                        </a>
                        <!-- Logout Button -->
                        <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post" style="display: inline;">
                            <button type="submit" class="btn btn-outline">Logout</button>
                        </form>
                    </div>
                }
                else
                {
                    <div class="auth-buttons">
                        <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-outline">Sign In</a>
                        <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-primary">Sign Up</a>
                    </div>
                }
            </div>
        </nav>
    </header>


    @if (Context.Request.Path.StartsWithSegments("/Identity"))
    {
        @RenderBody()
    }
    else
    {
        <div class="homepage-container">
            <div class="col-12 main">
                @RenderBody()
            </div>
        </div>
    }

    <!-- Contact Section - Available on all pages except authentication -->
    @if (!Context.Request.Path.StartsWithSegments("/Identity"))
    {
        @await Html.PartialAsync("_ContactSection")
    }

    @* <footer class="border-top footer text-muted"> *@
    @*     <div class="container"> *@
    @*         &copy; 2025 - Web - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a> *@
    @*     </div> *@
    @* </footer> *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    <!-- Dark Mode Script -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const body = document.body;
            const headerToggle = document.getElementById('headerDarkModeToggle');
            const darkModeIcon = document.getElementById('darkModeIcon');
            
            // Load saved theme preference on page load
            const savedTheme = localStorage.getItem('theme');
            if (savedTheme === 'dark') {
                body.setAttribute('data-theme', 'dark');
                if (darkModeIcon) {
                    darkModeIcon.className = 'fas fa-sun';
                }
            }
            
            // Header dark mode toggle
            if (headerToggle) {
                headerToggle.addEventListener('click', function() {
                    const isDark = body.getAttribute('data-theme') === 'dark';
                    
                    if (isDark) {
                        body.removeAttribute('data-theme');
                        localStorage.setItem('theme', 'light');
                        if (darkModeIcon) {
                            darkModeIcon.className = 'fas fa-moon';
                        }
                    } else {
                        body.setAttribute('data-theme', 'dark');
                        localStorage.setItem('theme', 'dark');
                        if (darkModeIcon) {
                            darkModeIcon.className = 'fas fa-sun';
                        }
                    }
                });
            }

            // Smooth scroll for contact link on all pages
            document.querySelectorAll('a[href="#contact"]').forEach(anchor => {
                anchor.addEventListener('click', function (e) {
                    e.preventDefault();
                    const target = document.querySelector('#contact');
                    if (target) {
                        target.scrollIntoView({
                            behavior: 'smooth',
                            block: 'start'
                        });
                    }
                });
            });
        });
    </script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
