@model Web.Models.Staff.ViewTripsViewModel
@{
    ViewData["Title"] = "View Trips";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="page-header mb-4">
                <h1 class="h3 mb-0">Trips from @Model.StationName</h1>
                <p class="text-muted">Manage all trips from your station</p>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0">All Trips (@Model.Trips.Count)</h5>
                    <a href="@Url.Action("CreateTrip")" class="btn btn-primary">
                        <i class="fas fa-plus-circle me-2"></i>Create New Trip
                    </a>
                </div>
                <div class="card-body">
                    @if (Model.Trips.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Route</th>
                                        <th>Driver</th>
                                        <th>Departure Time</th>
                                        <th>Available Seats</th>
                                        <th>Bookings</th>
                                        <th>Price</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var trip in Model.Trips)
                                    {
                                        <tr class="@(trip.IsUpcoming ? "" : "table-secondary")">
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <i class="fas fa-route text-primary me-2"></i>
                                                    <span>@trip.RouteName</span>
                                                </div>
                                            </td>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="avatar-sm bg-info text-white rounded-circle d-flex align-items-center justify-content-center me-2">
                                                        @trip.DriverName.Split(' ').Select(n => n[0]).Take(2).Aggregate("", (a, b) => a + b)
                                                    </div>
                                                    <span>@trip.DriverName</span>
                                                </div>
                                            </td>
                                            <td>
                                                <div>
                                                    <strong>@trip.DepartureTime.ToString("MMM dd, yyyy")</strong>
                                                    <br>
                                                    <small class="text-muted">@trip.DepartureTime.ToString("HH:mm")</small>
                                                </div>
                                            </td>
                                            <td>
                                                <span class="badge bg-@(trip.AvailableSeats > 0 ? "success" : "danger") fs-6">
                                                    @trip.AvailableSeats
                                                </span>
                                            </td>
                                            <td>
                                                <span class="badge bg-info fs-6">@trip.BookingsCount</span>
                                            </td>
                                            <td>
                                                <strong class="text-success">@trip.Price.ToString("C")</strong>
                                            </td>
                                            <td>
                                                @if (trip.IsUpcoming)
                                                {
                                                    <span class="badge bg-success">Upcoming</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">Completed</span>
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a href="@Url.Action("ViewTripDriverQueue", new { tripId = trip.Id })" class="btn btn-sm btn-outline-primary" data-bs-toggle="tooltip" title="View Driver Queue">
                                                        <i class="fas fa-users"></i>
                                                    </a>
                                                    <button type="button" class="btn btn-sm btn-outline-info" data-bs-toggle="tooltip" title="View Details">
                                                        <i class="fas fa-eye"></i>
                                                    </button>
                                                    @if (trip.IsUpcoming)
                                                    {
                                                        <button type="button" class="btn btn-sm btn-outline-warning" data-bs-toggle="tooltip" title="Edit Trip">
                                                            <i class="fas fa-edit"></i>
                                                        </button>
                                                        <button type="button" class="btn btn-sm btn-outline-danger" data-bs-toggle="tooltip" title="Cancel Trip">
                                                            <i class="fas fa-times"></i>
                                                        </button>
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-bus fa-4x text-muted mb-3"></i>
                            <h5 class="text-muted">No trips found</h5>
                            <p class="text-muted">There are no trips scheduled from your station yet.</p>
                            <a href="@Url.Action("CreateTrip")" class="btn btn-primary">
                                <i class="fas fa-plus-circle me-2"></i>Create First Trip
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Statistics Cards -->
    @if (Model.Trips.Any())
    {
        <div class="row mt-4">
            <div class="col-md-3">
                <div class="card bg-primary text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h4 class="card-title">@Model.Trips.Count</h4>
                                <p class="card-text">Total Trips</p>
                            </div>
                            <div class="align-self-center">
                                <i class="fas fa-bus fa-2x"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-success text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h4 class="card-title">@Model.Trips.Count(t => t.IsUpcoming)</h4>
                                <p class="card-text">Upcoming Trips</p>
                            </div>
                            <div class="align-self-center">
                                <i class="fas fa-clock fa-2x"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-info text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h4 class="card-title">@Model.Trips.Sum(t => t.BookingsCount)</h4>
                                <p class="card-text">Total Bookings</p>
                            </div>
                            <div class="align-self-center">
                                <i class="fas fa-ticket-alt fa-2x"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-warning text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h4 class="card-title">@Model.Trips.Sum(t => t.AvailableSeats)</h4>
                                <p class="card-text">Available Seats</p>
                            </div>
                            <div class="align-self-center">
                                <i class="fas fa-chair fa-2x"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        // Initialize tooltips
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl)
        });
    </script>
}
