@model Web.Models.Staff.AddDriverByCarNumberViewModel
@{
    ViewData["Title"] = "Add Driver by Car Number";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="page-header mb-4">
                <h1 class="h3 mb-0">Add Driver by Car Number (@Model.StationName)</h1>
                <p class="text-muted">Validate presence of a driver by car number for your station</p>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Driver Car Number</h5>
                </div>
                <div class="card-body">
                    <form asp-action="AddDriverByCarNumber" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="CarNumber" class="form-label"></label>
                            <input asp-for="CarNumber" class="form-control" placeholder="Enter car number" />
                            <span asp-validation-for="CarNumber" class="text-danger"></span>
                            <div class="form-text">Enter the driver's car number to confirm and proceed to create a trip.</div>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("Home")" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Back to Home
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-check me-2"></i>Validate Driver
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


