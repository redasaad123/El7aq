@model Web.Models.Staff.AddDriverViewModel
@{
    ViewData["Title"] = "Add Driver";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="page-header mb-4">
                <h1 class="h3 mb-0">Add Driver to @Model.StationName</h1>
                <p class="text-muted">Register a new driver for your station</p>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Driver Information</h5>
                </div>
                <div class="card-body">
                    <form asp-action="AddDriver" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        
                        <div class="mb-3">
                            <label asp-for="UserId" class="form-label"></label>
                            <select asp-for="UserId" class="form-select" asp-items="@(new SelectList(Model.AvailableUsers, "Id", "FullName"))">
                                <option value="">-- Select a user --</option>
                            </select>
                            <span asp-validation-for="UserId" class="text-danger"></span>
                            <div class="form-text">Select a user to make them a driver for your station.</div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="LicenseNumber" class="form-label"></label>
                                    <input asp-for="LicenseNumber" class="form-control" placeholder="Enter license number" />
                                    <span asp-validation-for="LicenseNumber" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="CarNumber" class="form-label"></label>
                                    <input asp-for="CarNumber" class="form-control" placeholder="Enter car number" />
                                    <span asp-validation-for="CarNumber" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("Home")" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Back to Home
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-user-plus me-2"></i>Add Driver
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Available Users</h5>
                </div>
                <div class="card-body">
                    @if (Model.AvailableUsers.Any())
                    {
                        <div class="list-group">
                            @foreach (var user in Model.AvailableUsers.Take(5))
                            {
                                <div class="list-group-item">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h6 class="mb-1">@user.FirstName @user.LastName</h6>
                                    </div>
                                    <p class="mb-1 text-muted">@user.Email</p>
                                </div>
                            }
                        </div>
                        @if (Model.AvailableUsers.Count > 5)
                        {
                            <div class="text-center mt-2">
                                <small class="text-muted">And @(Model.AvailableUsers.Count - 5) more users...</small>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center py-3">
                            <i class="fas fa-users fa-2x text-muted mb-2"></i>
                            <p class="text-muted">No available users to add as drivers.</p>
                        </div>
                    }
                </div>
            </div>

            <div class="card mt-3">
                <div class="card-header">
                    <h5 class="card-title mb-0">Quick Actions</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="@Url.Action("Home")" class="btn btn-outline-primary">
                            <i class="fas fa-home me-2"></i>Dashboard
                        </a>
                        <a href="@Url.Action("ListDrivers")" class="btn btn-outline-info">
                            <i class="fas fa-list me-2"></i>List Drivers
                        </a>
                        <a href="@Url.Action("CreateTrip")" class="btn btn-outline-success">
                            <i class="fas fa-plus-circle me-2"></i>Create Trip
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
