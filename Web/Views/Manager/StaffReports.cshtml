@model IEnumerable<Web.Models.StaffReportViewModel>
@{
    ViewData["Title"] = "Staff Reports - El7aq";
}

<div class="container-fluid" style="margin-top: 120px; padding: 2rem 5%; max-width: 1400px; margin-left: auto; margin-right: auto;">
    <div class="row mb-4">
        <div class="col-12 d-flex justify-content-between align-items-center">
            <div>
                <h2 style="color: var(--blackish-blue); margin-bottom: 0.5rem;"><i class="fas fa-user-tie me-2"></i>Staff Reports</h2>
                <p class="text-muted mb-0">Overview of staff members and assigned stations</p>
            </div>
            <div>
                <a asp-action="ManagerHome" class="btn btn-outline-primary"><i class="fas fa-arrow-left me-2"></i>Back to Dashboard</a>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-6 mb-3">
            <div class="stat-card" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; padding: 1.5rem; border-radius: 15px; text-align: center;">
                <i class="fas fa-user-tie fa-2x mb-2"></i>
                <h3>@ViewBag.TotalStaff</h3>
                <p class="mb-0">Total Staff</p>
            </div>
        </div>
        <div class="col-md-6 mb-3">
            <div class="stat-card" style="background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%); color: white; padding: 1.5rem; border-radius: 15px; text-align: center;">
                <i class="fas fa-map-marker-alt fa-2x mb-2"></i>
                <h3>@ViewBag.StationsCount</h3>
                <p class="mb-0">Covered Stations</p>
            </div>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-4">
            <div class="input-group">
                <span class="input-group-text"><i class="fas fa-search"></i></span>
                <input type="text" class="form-control" id="searchInput" placeholder="Search staff...">
            </div>
        </div>
        <div class="col-md-4">
            <select class="form-select" id="stationFilter">
                <option value="">All Stations</option>
                @foreach (var s in Model.Select(x => new { x.StationName, x.StationCity }).Distinct())
                {
                    <option value="@s.StationName">@s.StationName - @s.StationCity</option>
                }
            </select>
        </div>
        <div class="col-md-4">
            <select class="form-select" id="sortBy">
                <option value="name">Sort by Name</option>
                <option value="station">Sort by Station</option>
            </select>
        </div>
    </div>

    <div class="row" id="staffGrid">
        @if (Model != null && Model.Any())
        {
            @foreach (var staff in Model)
            {
                <div class="col-lg-4 col-md-6 mb-4 staff-card" data-name="@staff.FullName.ToLower()" data-station="@staff.StationName">
                    <div class="card h-100" style="border-radius: 15px; box-shadow: 0 5px 15px rgba(0,0,0,0.08); border: none; transition: all 0.3s ease;">
                        <div class="card-body">
                            <div class="d-flex align-items-center mb-3">
                                <div class="passenger-avatar me-3" style="width: 50px; height: 50px; border-radius: 50%; background: linear-gradient(135deg, #4facfe, #00f2fe); display: flex; align-items: center; justify-content: center; color: white; font-weight: bold; font-size: 1.2rem;">
                                    @staff.FirstName.FirstOrDefault().ToString().ToUpper()
                                </div>
                                <div class="flex-grow-1">
                                    <h5 class="card-title mb-1" style="color: var(--blackish-blue);">@staff.FullName</h5>
                                    <p class="card-text text-muted mb-0 small">@staff.Email</p>
                                </div>
                            </div>
                            <div class="passenger-details mb-3">
                                <div class="detail-item d-flex justify-content-between">
                                    <span class="text-muted">Phone:</span>
                                    <span>@(string.IsNullOrEmpty(staff.PhoneNumber) ? "Not provided" : staff.PhoneNumber)</span>
                                </div>
                                <div class="detail-item d-flex justify-content-between">
                                    <span class="text-muted">Station:</span>
                                    <span>@staff.StationName - @staff.StationCity</span>
                                </div>
                            </div>
                            <div class="d-flex gap-2">
                                <a asp-action="EditStaff" asp-route-id="@staff.Id" class="btn btn-outline-primary btn-sm">
                                    <i class="fas fa-edit me-1"></i>Edit
                                </a>
                                <form asp-action="DeleteStaff" method="post" onsubmit="return confirm('Delete this staff member? This will remove the linked user too.');">
                                    <input type="hidden" name="id" value="@staff.Id" />
                                    <button type="submit" class="btn btn-outline-danger btn-sm">
                                        <i class="fas fa-trash me-1"></i>Delete
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="text-center py-5">
                    <i class="fas fa-user-tie fa-3x text-muted mb-3"></i>
                    <h4 class="text-muted">No Staff Found</h4>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .staff-card:hover { transform: translateY(-5px); box-shadow: 0 10px 25px rgba(0,0,0,0.15) !important; }
    .detail-item { padding: 0.25rem 0; border-bottom: 1px solid rgba(0,0,0,0.05); }
    .detail-item:last-child { border-bottom: none; }
    [data-theme="dark"] .card { background: #2D2D2D !important; box-shadow: 0 5px 15px rgba(0,0,0,0.3) !important; }
    [data-theme="dark"] .stat-card { box-shadow: 0 10px 25px rgba(0,0,0,0.3); }
    [data-theme="dark"] .detail-item { border-bottom-color: rgba(255,255,255,0.1); }
    [data-theme="dark"] .card .text-muted { color: rgba(255,255,255,0.7) !important; }
</style>

<script>
    const searchInput = document.getElementById('searchInput');
    const stationFilter = document.getElementById('stationFilter');
    const sortBy = document.getElementById('sortBy');
    const grid = document.getElementById('staffGrid');

    searchInput.addEventListener('input', filter);
    stationFilter.addEventListener('change', filter);
    sortBy.addEventListener('change', sort);

    function filter() {
        const term = searchInput.value.toLowerCase();
        const station = stationFilter.value;
        const cards = grid.querySelectorAll('.staff-card');
        cards.forEach(c => {
            const matchesName = c.dataset.name.includes(term);
            const matchesStation = !station || c.dataset.station === station;
            c.style.display = (matchesName && matchesStation) ? 'block' : 'none';
        });
    }

    function sort() {
        const value = sortBy.value;
        const cards = Array.from(grid.querySelectorAll('.staff-card'));
        cards.sort((a,b) => {
            if (value === 'station') return a.dataset.station.localeCompare(b.dataset.station);
            return a.dataset.name.localeCompare(b.dataset.name);
        });
        cards.forEach(c => grid.appendChild(c));
    }
</script>


