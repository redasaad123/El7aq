@model Web.Models.Trip.SearchTripsViewModel
@{
    ViewData["Title"] = "Search Trips";
}

<div class="bookings-container">
    <div class="container">
        <!-- Page Header -->
        <div class="page-header">
            <h1>
                <i class="fas fa-bus"></i>
                Available Trips
            </h1>
            <p>Browse and book trips matching your search criteria</p>
        </div>

        <!-- Stats -->
        <div class="stats-grid">
            <div class="stat-card">
                <div class="stat-icon">
                    <i class="fas fa-ticket-alt"></i>
                </div>
                <div class="stat-info">
                    <span class="stat-number">@((Model.SearchResults?.Count() ?? 0))</span>
                    <span class="stat-label">Total Trips</span>
                </div>
            </div>
            <div class="stat-card">
                <div class="stat-icon confirmed">
                    <i class="fas fa-chair"></i>
                </div>
                <div class="stat-info">
                    <span class="stat-number">@((Model.SearchResults?.Sum(t => t.AvailableSeats) ?? 0))</span>
                    <span class="stat-label">Available Seats</span>
                </div>
            </div>
        </div>

        <!-- Trips List -->
        @if (Model.SearchResults != null && Model.SearchResults.Any())
        {
            <div class="bookings-list">
                @foreach (var trip in Model.SearchResults)
                {
                    <div class="booking-card confirmed">
                        <div class="booking-header">
                            <div class="booking-route">
                                <span class="route-text">
                                    @trip.OriginStation
                                    <i class="fas fa-arrow-right"></i>
                                    @trip.DestinationStation
                                </span>
                                <span class="booking-id">Trip #@trip.TripId</span>
                            </div>
                            <div class="booking-status">
                                <span class="status-badge confirmed">
                                    <i class="fas fa-bus"></i> Available
                                </span>
                            </div>
                        </div>

                        <div class="booking-details">
                            <div class="detail-section">
                                <h4>Trip Details</h4>
                                <div class="detail-grid">
                                    <div class="detail-item">
                                        <i class="fas fa-calendar"></i>
                                        <div>
                                            <strong>@trip.DepartureTime.ToString("MMM dd, yyyy")</strong>
                                            <small>@trip.DepartureTime.ToString("dddd")</small>
                                        </div>
                                    </div>
                                    <div class="detail-item">
                                        <i class="fas fa-clock"></i>
                                        <div>
                                            <strong>@trip.DepartureTime.ToString("HH:mm")</strong>
                                            <small>Departure Time</small>
                                        </div>
                                    </div>
                                    <div class="detail-item">
                                        <i class="fas fa-money-bill"></i>
                                        <div>
                                            <strong>@trip.Price.ToString("C")</strong>
                                            <small>Trip Price</small>
                                        </div>
                                    </div>
                                    <div class="detail-item">
                                        <i class="fas fa-chair"></i>
                                        <div>
                                            <strong>@trip.AvailableSeats</strong>
                                            <small>Seats Left</small>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="detail-section">
                                <h4>Driver Information</h4>
                                <div class="driver-info">
                                    <div class="detail-item">
                                        <i class="fas fa-user-tie"></i>
                                        <div>
                                            <strong>@trip.DriverName</strong>
                                            <small>Driver</small>
                                        </div>
                                    </div>
                                    <div class="detail-item">
                                        <i class="fas fa-car"></i>
                                        <div>
                                            <strong>@trip.CarNumber</strong>
                                            <small>Vehicle</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                           
                        <div class="booking-actions">
                            <form asp-controller="Passenger" asp-action="BookSeat" method="post">
                                <input type="hidden" name="tripId" value="@trip.TripId" />
                                <button type="submit" class="btn btn-success">
                                    <i class="fas fa-ticket-alt"></i>
                                    Book Now
                                </button>
                            </form>
                        </div>

                    </div>
                }
            </div>
        }
        else
        {
            <div class="no-bookings">
                <div class="no-bookings-content">
                    <i class="fas fa-bus"></i>
                    <h3>No Trips Found</h3>
                    <p>Try changing your search criteria and search again.</p>
                    <a asp-controller="Passenger" asp-action="SearchTrips" class="btn btn-primary">
                        <i class="fas fa-search"></i>
                        Search Again
                    </a>
                </div>
            </div>
        }
    </div>
</div>


<style>
    .bookings-container {
        margin-top: 120px;
        min-height: calc(100vh - 120px);
        background: linear-gradient(135deg, var(--background) 0%, var(--white-bluish) 100%);
        padding: 2rem 0;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 2rem;
        width: 100%;
        box-sizing: border-box;
    }

    /* Page Header */
    .page-header {
        text-align: center;
        margin-bottom: 2rem;
    }

        .page-header h1 {
            color: var(--primary-blue);
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
        }

        .page-header p {
            color: var(--text-light);
            font-size: 1.1rem;
        }

    /* Stats Grid */
    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1.5rem;
        margin-bottom: 2rem;
    }

    .stat-card {
        background: white;
        border-radius: 15px;
        padding: 1.5rem;
        display: flex;
        align-items: center;
        gap: 1rem;
        box-shadow: 0 4px 20px rgba(39, 170, 226, 0.1);
        border: 2px solid transparent;
        transition: all 0.3s ease;
    }

        .stat-card:hover {
            transform: translateY(-3px);
            border-color: var(--primary-blue);
            box-shadow: 0 8px 25px rgba(39, 170, 226, 0.2);
        }

    .stat-icon {
        width: 60px;
        height: 60px;
        background: linear-gradient(135deg, var(--primary-blue), var(--dark-blue));
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 1.5rem;
    }

        .stat-icon.confirmed {
            background: linear-gradient(135deg, #4CAF50, #45a049);
        }

        .stat-icon.pending {
            background: linear-gradient(135deg, #FF9800, #f57c00);
        }

        .stat-icon.cancelled {
            background: linear-gradient(135deg, #f44336, #d32f2f);
        }

    .stat-info {
        display: flex;
        flex-direction: column;
    }

    .stat-number {
        font-size: 2rem;
        font-weight: 700;
        color: var(--blackish-blue);
        line-height: 1;
    }

    .stat-label {
        color: var(--text-light);
        font-size: 0.9rem;
        margin-top: 0.25rem;
    }

    /* Filter Tabs */
    .filter-tabs {
        display: flex;
        gap: 1rem;
        margin-bottom: 2rem;
        overflow-x: auto;
        padding-bottom: 0.5rem;
    }

    .filter-btn {
        background: white;
        border: 2px solid var(--primary-blue);
        color: var(--primary-blue);
        padding: 0.8rem 1.5rem;
        border-radius: 25px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        white-space: nowrap;
        font-size: 0.9rem;
    }

        .filter-btn:hover,
        .filter-btn.active {
            background: var(--primary-blue);
            color: white;
            transform: translateY(-2px);
        }

    /* Bookings List */
    .bookings-list {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(380px, 1fr));
        gap: 1.5rem;
        align-items: start;
        width: 100%;
        overflow-x: auto;
    }

    .booking-card {
        background: white;
        border-radius: 20px;
        padding: 2rem;
        box-shadow: 0 8px 32px rgba(39, 170, 226, 0.12);
        border: 1px solid rgba(39, 170, 226, 0.1);
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        position: relative;
        overflow: hidden;
        width: 100%;
        max-width: 100%;
        box-sizing: border-box;
    }

        .booking-card::before {
            content: '';
            position: absolute;
            left: 0;
            top: 0;
            bottom: 0;
            width: 6px;
            background: linear-gradient(135deg, var(--primary-blue), var(--dark-blue));
            border-radius: 20px 0 0 20px;
        }

        .booking-card.confirmed::before {
            background: linear-gradient(135deg, #4CAF50, #45a049);
        }

        .booking-card.pending::before {
            background: linear-gradient(135deg, #FF9800, #f57c00);
        }

        .booking-card.cancelled::before {
            background: linear-gradient(135deg, #f44336, #d32f2f);
        }

        .booking-card:hover {
            transform: translateY(-8px) scale(1.02);
            border-color: var(--primary-blue);
            box-shadow: 0 20px 60px rgba(39, 170, 226, 0.25);
        }

    .booking-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 2rem;
        padding-bottom: 1.5rem;
        border-bottom: 2px solid rgba(39, 170, 226, 0.1);
        position: relative;
    }

    .booking-route {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    .route-text {
        font-size: 1.4rem;
        font-weight: 700;
        color: var(--blackish-blue);
        display: flex;
        align-items: center;
        gap: 0.8rem;
        line-height: 1.3;
    }

        .route-text i {
            color: var(--primary-blue);
            font-size: 1.2rem;
            padding: 0.3rem;
            background: rgba(39, 170, 226, 0.1);
            border-radius: 50%;
        }

    .booking-id {
        font-size: 0.9rem;
        color: var(--text-light);
        font-weight: 500;
    }

    .status-badge {
        padding: 0.5rem 1rem;
        border-radius: 25px;
        font-weight: 600;
        font-size: 0.85rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

        .status-badge.confirmed {
            background: rgba(76, 175, 80, 0.1);
            color: #4CAF50;
            border: 2px solid #4CAF50;
        }

        .status-badge.pending {
            background: rgba(255, 152, 0, 0.1);
            color: #FF9800;
            border: 2px solid #FF9800;
        }

        .status-badge.cancelled {
            background: rgba(244, 67, 54, 0.1);
            color: #f44336;
            border: 2px solid #f44336;
        }

    .booking-details {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 1.5rem;
        margin-bottom: 2rem;
        width: 100%;
        box-sizing: border-box;
    }

    .detail-section h4 {
        color: var(--primary-blue);
        font-size: 1.2rem;
        font-weight: 700;
        margin-bottom: 1.5rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .detail-section h4::before {
        content: '';
        width: 4px;
        height: 20px;
        background: linear-gradient(135deg, var(--primary-blue), var(--dark-blue));
        border-radius: 2px;
    }

    .detail-grid, .driver-info {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1rem;
    }

    .detail-item {
        display: flex;
        align-items: center;
        gap: 1rem;
        padding: 1.2rem;
        background: linear-gradient(135deg, rgba(39, 170, 226, 0.05), rgba(39, 170, 226, 0.02));
        border-radius: 12px;
        border: 1px solid rgba(39, 170, 226, 0.1);
        transition: all 0.3s ease;
    }

    .detail-item:hover {
        background: linear-gradient(135deg, rgba(39, 170, 226, 0.08), rgba(39, 170, 226, 0.04));
        transform: translateY(-2px);
    }

        .detail-item i {
            color: var(--primary-blue);
            font-size: 1.3rem;
            width: 24px;
            text-align: center;
            padding: 0.5rem;
            background: rgba(39, 170, 226, 0.1);
            border-radius: 8px;
        }

        .detail-item div {
            display: flex;
            flex-direction: column;
        }

        .detail-item strong {
            color: var(--blackish-blue);
            font-weight: 600;
        }

        .detail-item small {
            color: var(--text-light);
            font-size: 0.8rem;
        }

    .booking-meta {
        margin-top: 1rem;
        padding-top: 1rem;
        border-top: 1px solid rgba(39, 170, 226, 0.1);
    }

    .meta-item {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        color: var(--text-light);
        font-size: 0.9rem;
    }

        .meta-item i {
            color: var(--primary-blue);
        }

    .booking-actions {
        display: flex;
        gap: 1.5rem;
        flex-wrap: wrap;
        justify-content: flex-end;
        padding-top: 1.5rem;
        border-top: 1px solid rgba(39, 170, 226, 0.1);
    }

    .btn {
        padding: 0.8rem 2rem;
        border-radius: 12px;
        text-decoration: none;
        font-weight: 700;
        font-size: 1rem;
        cursor: pointer;
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        display: inline-flex;
        align-items: center;
        gap: 0.8rem;
        border: none;
        position: relative;
        overflow: hidden;
    }

    .btn::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
        transition: left 0.5s;
    }

    .btn:hover::before {
        left: 100%;
    }

    .btn-outline {
        background: transparent;
        color: var(--primary-blue);
        border: 2px solid var(--primary-blue);
    }

        .btn-outline:hover {
            background: var(--primary-blue);
            color: white;
            transform: translateY(-2px);
        }

    .btn-danger {
        background: #f44336;
        color: white;
    }

        .btn-danger:hover {
            background: #d32f2f;
            transform: translateY(-2px);
        }

    .btn-success {
        background: linear-gradient(135deg, #4CAF50, #45a049);
        color: white;
        box-shadow: 0 4px 15px rgba(76, 175, 80, 0.3);
    }

        .btn-success:hover {
            background: linear-gradient(135deg, #45a049, #388e3c);
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(76, 175, 80, 0.4);
        }

    .btn-primary {
        background: linear-gradient(135deg, var(--primary-blue), var(--dark-blue));
        color: white;
        box-shadow: 0 4px 15px rgba(39, 170, 226, 0.3);
    }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(39, 170, 226, 0.4);
        }

    /* No Bookings */
    .no-bookings {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 300px;
        text-align: center;
    }

    .no-bookings-content {
        background: white;
        padding: 3rem 2rem;
        border-radius: 15px;
        box-shadow: 0 4px 20px rgba(39, 170, 226, 0.1);
        border: 2px solid transparent;
        transition: all 0.3s ease;
    }

    .no-bookings-content:hover {
        transform: translateY(-3px);
        border-color: var(--primary-blue);
        box-shadow: 0 8px 30px rgba(39, 170, 226, 0.2);
    }

    .no-bookings-content i {
        font-size: 4rem;
        color: var(--primary-blue);
        margin-bottom: 1rem;
    }

    .no-bookings-content h3 {
        color: var(--blackish-blue);
        font-size: 1.5rem;
        margin-bottom: 1rem;
    }

    .no-bookings-content p {
        color: var(--text-light);
        margin-bottom: 2rem;
    }

    /* Dark mode styles for SearchTrips page */
    [data-theme="dark"] .stat-card {
        background: #2D2D2D !important;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3) !important;
    }

    [data-theme="dark"] .stat-card:hover {
        border-color: var(--primary-blue) !important;
        box-shadow: 0 8px 25px rgba(79, 195, 247, 0.2) !important;
    }

    [data-theme="dark"] .stat-number {
        color: var(--text-dark) !important;
    }

    [data-theme="dark"] .stat-label {
        color: var(--text-light) !important;
    }

    [data-theme="dark"] .booking-card {
        background: #2D2D2D !important;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3) !important;
    }

    [data-theme="dark"] .booking-card:hover {
        border-color: var(--primary-blue) !important;
        box-shadow: 0 8px 30px rgba(79, 195, 247, 0.2) !important;
    }

    [data-theme="dark"] .route-text {
        color: var(--text-dark) !important;
    }

    [data-theme="dark"] .booking-id {
        color: var(--text-light) !important;
    }

    [data-theme="dark"] .detail-section h4 {
        color: var(--primary-blue) !important;
    }

    [data-theme="dark"] .detail-item {
        background: #3D3D3D !important;
    }

    [data-theme="dark"] .detail-item strong {
        color: var(--text-dark) !important;
    }

    [data-theme="dark"] .detail-item small {
        color: var(--text-light) !important;
    }

    [data-theme="dark"] .no-bookings-content {
        background: #2D2D2D !important;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3) !important;
    }

    [data-theme="dark"] .no-bookings-content:hover {
        border-color: var(--primary-blue) !important;
        box-shadow: 0 8px 30px rgba(79, 195, 247, 0.2) !important;
    }

    [data-theme="dark"] .no-bookings-content h3 {
        color: var(--text-dark) !important;
    }

    [data-theme="dark"] .no-bookings-content p {
        color: var(--text-light) !important;
    }

    [data-theme="dark"] .page-header h1 {
        color: var(--primary-blue) !important;
    }

    [data-theme="dark"] .page-header p {
        color: var(--text-light) !important;
    }

    @@media (max-width: 1024px) {
        .bookings-list {
            grid-template-columns: 1fr;
            gap: 1.5rem;
        }
    }

    @@media (max-width: 768px) {
        .bookings-container {
            margin-top: 100px;
            padding: 1rem 0;
        }
        
        .container {
            padding: 0 1rem;
            max-width: 100%;
        }
        
        .page-header h1 {
            font-size: 2rem;
        }
        
        .stats-grid {
            grid-template-columns: 1fr;
        }
        
        .bookings-list {
            grid-template-columns: 1fr;
            gap: 1.5rem;
        }
        
        .booking-card {
            padding: 2rem;
            margin: 0;
        }
        
        .booking-details {
            grid-template-columns: 1fr;
            gap: 1.5rem;
        }
        
        .detail-grid, .driver-info {
            grid-template-columns: 1fr;
        }
        
        .booking-header {
            flex-direction: column;
            align-items: flex-start;
            gap: 1rem;
        }
        
        .booking-actions {
            justify-content: center;
        }
    }

    @@media (max-width: 480px) {
        .booking-card {
            padding: 1.5rem;
        }
        
        .route-text {
            font-size: 1.2rem;
        }
        
        .btn {
            padding: 0.7rem 1.5rem;
            font-size: 0.9rem;
        }
    }
</style>