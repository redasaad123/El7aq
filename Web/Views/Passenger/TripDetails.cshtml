@model Web.Models.Trip.TripDetailsViewModel
@{
    ViewData["Title"] = "Trip Details";
}

<div class="trip-details-container">
    <div class="container">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success" role="alert">@TempData["SuccessMessage"]</div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger" role="alert">@TempData["ErrorMessage"]</div>
        }
        <!-- Trip Header -->
        <div class="trip-header-card">
            <div class="header-content">
                <div class="route-info">
                    <h1>
                        <span class="origin">@Model.OriginStation.Name</span>
                        <i class="fas fa-long-arrow-alt-right"></i>
                        <span class="destination">@Model.DestinationStation.Name</span>
                    </h1>
                    <p class="departure-time">
                        <i class="fas fa-calendar"></i>
                        @Model.DepartureTime.ToString("dddd, MMMM dd, yyyy")
                        <span class="time">@Model.DepartureTime.ToString("HH:mm")</span>
                    </p>
                </div>
                <div class="status-badge">
                    @if (Model.AvailableSeats > 0)
                    {
                        <span class="available">Available</span>
                    }
                    else
                    {
                        <span class="full">Fully Booked</span>
                    }
                </div>
            </div>
        </div>

        <div class="details-grid">
            <!-- Trip Information Card -->
            <div class="info-card">
                <h2>
                    <i class="fas fa-info-circle"></i>
                    Trip Information
                </h2>
                
                <div class="info-section">
                    <h3>Route Details</h3>
                    <div class="route-details">
                        <div class="station-info">
                            <i class="fas fa-map-marker-alt start-marker"></i>
                            <div>
                                <strong>@Model.OriginStation.Name</strong>
                                <small>@Model.OriginStation.City</small>
                            </div>
                        </div>
                        <div class="journey-line"></div>
                        <div class="station-info">
                            <i class="fas fa-flag-checkered end-marker"></i>
                            <div>
                                <strong>@Model.DestinationStation.Name</strong>
                                <small>@Model.DestinationStation.City</small>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="info-section">
                    <h3>Seating Information</h3>
                    <div class="seating-grid">
                        <div class="seat-stat">
                            <span class="number">@Model.TotalSeats</span>
                            <label>Total Seats</label>
                        </div>
                        <div class="seat-stat">
                            <span class="number booked">@Model.BookedSeats</span>
                            <label>Booked</label>
                        </div>
                        <div class="seat-stat">
                            <span class="number available">@Model.AvailableSeats</span>
                            <label>Available</label>
                        </div>
                    </div>
                    
                    <div class="progress-bar">
                        <div class="progress-fill" style="width: @(((double)Model.BookedSeats / Model.TotalSeats) * 100)%"></div>
                    </div>
                    <small>@(((double)Model.BookedSeats / Model.TotalSeats * 100).ToString("F1"))% booked</small>
                </div>
            </div>

            <!-- Driver Information Card -->
            <div class="info-card">
                <h2>
                    <i class="fas fa-user-tie"></i>
                    Driver Information
                </h2>
                
                <div class="driver-profile">
                    <div class="driver-avatar">
                        <i class="fas fa-user"></i>
                    </div>
                    <div class="driver-details">
                        <h3>@Model.Driver.FullName</h3>
                        <div class="driver-info-item">
                            <i class="fas fa-car"></i>
                            <span>Vehicle: @Model.Driver.CarNumber</span>
                        </div>
                        <div class="driver-info-item">
                            <i class="fas fa-phone"></i>
                            <span>Phone: @Model.Driver.Email</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Booking Card -->
            <div class="booking-card">
                <h2>
                    <i class="fas fa-ticket-alt"></i>
                    Book Your Seat
                </h2>
                
                <div class="price-section">
                    <div class="price-display">
                        <span class="currency">EGP</span>
                        <span class="amount">@Model.Price.ToString("N0")</span>
                        <small>per seat</small>
                    </div>
                </div>

                <div class="booking-summary">
                    <div class="summary-item">
                        <span>Trip Date:</span>
                        <strong>@Model.DepartureTime.ToString("MMM dd, yyyy")</strong>
                    </div>
                    <div class="summary-item">
                        <span>Departure Time:</span>
                        <strong>@Model.DepartureTime.ToString("HH:mm")</strong>
                    </div>
                    <div class="summary-item">
                        <span>Available Seats:</span>
                        <strong class="@(Model.AvailableSeats > 0 ? "text-success" : "text-danger")">
                            @Model.AvailableSeats
                        </strong>
                    </div>
                </div>

                @if (Model.IsUserLoggedIn)
                {
                    <form asp-controller="Passenger" asp-action="BookSeat" method="post" class="booking-form">
                        <input type="hidden" name="tripId" value="@Model.TripId" />
                        <button type="submit" class="book-btn">
                            <i class="fas fa-ticket-alt"></i>
                            Book This Trip
                        </button>
                    </form>
                }
                else
                {
                    <a asp-area="Identity" asp-page="/Account/Login" asp-route-returnUrl="@Url.Action("TripDetails", new { id = Model.TripId })" class="book-btn">
                        <i class="fas fa-sign-in-alt"></i>
                        Login to Book This Trip
                    </a>
                }

                <div class="booking-note">
                    <i class="fas fa-info-circle"></i>
                    <small>Free cancellation up to 2 hours before departure</small>
                </div>
            </div>
        </div>

        <!-- Additional Information -->
        <div class="additional-info">
            <div class="info-card full-width">
                <h2>
                    <i class="fas fa-clipboard-list"></i>
                    Important Information
                </h2>
                
                <div class="info-grid">
                    <div class="info-column">
                        <h3>Booking Policy</h3>
                        <ul>
                            <li>Advance booking recommended</li>
                            <li>Payment required to confirm booking</li>
                            <li>Digital tickets will be sent via email</li>
                            <li>Arrive 15 minutes before departure</li>
                        </ul>
                    </div>
                    <div class="info-column">
                        <h3>Cancellation Policy</h3>
                        <ul>
                            <li>Free cancellation up to 2 hours before departure</li>
                            <li>50% refund if cancelled within 2 hours</li>
                            <li>No refund for no-shows</li>
                            <li>Rescheduling available (subject to availability)</li>
                        </ul>
                    </div>
                    <div class="info-column">
                        <h3>What to Bring</h3>
                        <ul>
                            <li>Valid ID document</li>
                            <li>Digital or printed ticket</li>
                            <li>Contact phone number</li>
                            <li>Arrive on time</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <!-- Navigation Actions -->
        <div class="navigation-actions">
            <a asp-controller="Passenger" asp-action="SearchTrips" class="btn btn-outline">
                <i class="fas fa-arrow-left"></i>
                Back to Search
            </a>
            <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-home"></i>
                Home
            </a>
        </div>
    </div>
</div>

<style>
    .trip-details-container {
        margin-top: 120px;
        min-height: calc(100vh - 120px);
        background: linear-gradient(135deg, var(--background) 0%, var(--white-bluish) 100%);
        padding: 2rem 0;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 2rem;
    }

    /* Trip Header Card */
    .trip-header-card {
        background: linear-gradient(135deg, var(--primary-blue), var(--dark-blue));
        color: white;
        border-radius: 20px;
        padding: 2.5rem;
        margin-bottom: 2rem;
        box-shadow: 0 8px 30px rgba(39, 170, 226, 0.3);
    }

    .header-content {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .route-info h1 {
        font-size: 2.2rem;
        font-weight: 700;
        margin-bottom: 1rem;
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    .route-info h1 i {
        font-size: 1.8rem;
        opacity: 0.8;
    }

    .departure-time {
        font-size: 1.2rem;
        opacity: 0.9;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .time {
        font-weight: 700;
        font-size: 1.4rem;
        margin-left: 1rem;
    }

    .status-badge span {
        padding: 0.5rem 1.5rem;
        border-radius: 25px;
        font-weight: 600;
        font-size: 1rem;
    }

    .status-badge .available {
        background: rgba(76, 175, 80, 0.2);
        color: #4CAF50;
        border: 2px solid #4CAF50;
    }

    .status-badge .full {
        background: rgba(244, 67, 54, 0.2);
        color: #F44336;
        border: 2px solid #F44336;
    }

    /* Details Grid */
    .details-grid {
        display: grid;
        grid-template-columns: 1fr 1fr 400px;
        gap: 2rem;
        margin-bottom: 2rem;
    }

    .info-card {
        background: white;
        border-radius: 15px;
        padding: 2rem;
        box-shadow: 0 4px 20px rgba(39, 170, 226, 0.1);
        border: 2px solid rgba(39, 170, 226, 0.05);
        height: fit-content;
    }

    .info-card h2 {
        color: var(--primary-blue);
        font-size: 1.5rem;
        font-weight: 700;
        margin-bottom: 1.5rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .info-section {
        margin-bottom: 2rem;
    }

    .info-section:last-child {
        margin-bottom: 0;
    }

    .info-section h3 {
        color: var(--blackish-blue);
        font-size: 1.1rem;
        font-weight: 600;
        margin-bottom: 1rem;
    }

    /* Route Details */
    .route-details {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        position: relative;
    }

    .station-info {
        display: flex;
        align-items: center;
        gap: 1rem;
        padding: 1rem;
        background: var(--white-bluish);
        border-radius: 10px;
    }

    .start-marker {
        color: #4CAF50;
        font-size: 1.2rem;
    }

    .end-marker {
        color: var(--primary-blue);
        font-size: 1.2rem;
    }

    .journey-line {
        width: 2px;
        height: 30px;
        background: linear-gradient(to bottom, #4CAF50, var(--primary-blue));
        margin: 0 auto 0 1.6rem;
    }

    /* Seating Information */
    .seating-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 1rem;
        margin-bottom: 1rem;
    }

    .seat-stat {
        text-align: center;
        padding: 1rem;
        background: var(--white-bluish);
        border-radius: 10px;
        border: 2px solid transparent;
        transition: all 0.3s ease;
    }

    .seat-stat:hover {
        border-color: var(--primary-blue);
        transform: translateY(-2px);
    }

    .seat-stat .number {
        display: block;
        font-size: 1.8rem;
        font-weight: 700;
        color: var(--primary-blue);
    }

    .seat-stat .number.booked {
        color: #FF9800;
    }

    .seat-stat .number.available {
        color: #4CAF50;
    }

    .seat-stat label {
        font-size: 0.9rem;
        color: var(--text-light);
        margin-top: 0.5rem;
    }

    .progress-bar {
        width: 100%;
        height: 8px;
        background: #E0E0E0;
        border-radius: 4px;
        overflow: hidden;
        margin-bottom: 0.5rem;
    }

    .progress-fill {
        height: 100%;
        background: linear-gradient(90deg, #FF9800, var(--primary-blue));
        transition: width 0.3s ease;
    }

    /* Driver Profile */
    .driver-profile {
        display: flex;
        gap: 1.5rem;
        align-items: center;
    }

    .driver-avatar {
        width: 80px;
        height: 80px;
        background: linear-gradient(135deg, var(--primary-blue), var(--dark-blue));
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 2rem;
    }

    .driver-details h3 {
        color: var(--blackish-blue);
        font-size: 1.3rem;
        margin-bottom: 1rem;
    }

    .driver-info-item {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        margin-bottom: 0.5rem;
        color: var(--text-light);
    }

    .driver-info-item i {
        color: var(--primary-blue);
        width: 16px;
    }

    /* Booking Card */
    .booking-card {
        background: linear-gradient(135deg, #fff, var(--white-bluish));
        border: 2px solid var(--primary-blue);
        position: sticky;
        top: 140px;
    }

    .price-section {
        text-align: center;
        margin-bottom: 2rem;
        padding: 1.5rem;
        background: var(--white-bluish);
        border-radius: 10px;
        border: 2px dashed var(--primary-blue);
    }

    .price-display {
        display: flex;
        align-items: baseline;
        justify-content: center;
        gap: 0.5rem;
    }

    .currency {
        font-size: 1rem;
        font-weight: 600;
        color: var(--text-light);
    }

    .amount {
        font-size: 2.5rem;
        font-weight: 700;
        color: var(--primary-blue);
    }

    .price-display small {
        color: var(--text-light);
        font-size: 0.9rem;
    }

    .booking-summary {
        margin-bottom: 2rem;
    }

    .summary-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0.8rem 0;
        border-bottom: 1px solid rgba(39, 170, 226, 0.1);
    }

    .summary-item:last-child {
        border-bottom: none;
    }

    .text-success {
        color: #4CAF50;
    }

    .text-danger {
        color: #F44336;
    }

    .book-btn {
        width: 100%;
        background: linear-gradient(135deg, var(--primary-blue), var(--dark-blue));
        color: white;
        border: none;
        padding: 1rem;
        border-radius: 10px;
        font-size: 1.1rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        box-shadow: 0 4px 15px rgba(39, 170, 226, 0.3);
        margin-bottom: 1rem;
    }

    .book-btn:hover:not(.disabled) {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(39, 170, 226, 0.4);
    }

    .book-btn.disabled {
        background: #E0E0E0;
        color: #999;
        cursor: not-allowed;
        box-shadow: none;
    }

    .booking-note {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        color: var(--text-light);
        font-size: 0.85rem;
        text-align: center;
        justify-content: center;
    }

    .booking-note i {
        color: var(--primary-blue);
    }

    /* Additional Information */
    .additional-info {
        margin-bottom: 2rem;
    }

    .full-width {
        grid-column: 1 / -1;
    }

    .info-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
    }

    .info-column h3 {
        color: var(--primary-blue);
        margin-bottom: 1rem;
        font-size: 1.1rem;
    }

    .info-column ul {
        list-style: none;
        padding: 0;
    }

    .info-column li {
        padding: 0.5rem 0;
        color: var(--text-light);
        position: relative;
        padding-left: 1.5rem;
        line-height: 1.4;
    }

    .info-column li::before {
        content: "✓";
        color: #4CAF50;
        font-weight: bold;
        position: absolute;
        left: 0;
    }

    /* Navigation Actions */
    .navigation-actions {
        display: flex;
        gap: 1rem;
        justify-content: center;
    }

    .btn {
        padding: 0.8rem 1.5rem;
        border-radius: 10px;
        text-decoration: none;
        font-weight: 600;
        font-size: 1rem;
        cursor: pointer;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        border: none;
    }

    .btn-outline {
        background: transparent;
        color: var(--primary-blue);
        border: 2px solid var(--primary-blue);
    }

    .btn-outline:hover {
        background: var(--primary-blue);
        color: white;
        transform: translateY(-2px);
    }

    .btn-secondary {
        background: var(--text-light);
        color: white;
    }

    .btn-secondary:hover {
        background: var(--blackish-blue);
        transform: translateY(-2px);
    }

    /* Responsive Design */
    @@media (max-width: 1024px) {
        .details-grid {
            grid-template-columns: 1fr;
            gap: 1.5rem;
        }
        
        .booking-card {
            position: static;
        }
    }

    @@media (max-width: 768px) {
        .header-content {
            flex-direction: column;
            gap: 1rem;
            align-items: flex-start;
        }
        
        .route-info h1 {
            font-size: 1.8rem;
            flex-direction: column;
            gap: 0.5rem;
        }
        
        .seating-grid {
            grid-template-columns: 1fr;
        }
        
        .driver-profile {
            flex-direction: column;
            text-align: center;
        }
        
        .info-grid {
            grid-template-columns: 1fr;
        }
        
        .navigation-actions {
            flex-direction: column;
        }
    }

    :root {
        --primary-blue: #27AAE2;
        --dark-blue: #218CBA;
        --blackish-blue: #1a1a2e;
        --text-light: #666;
        --background: #f8f9fa;
        --white-bluish: #f0f8ff;
    }

    /* Dark mode styles for TripDetails page */
    [data-theme="dark"] .info-card {
        background: #2D2D2D !important;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3) !important;
    }

    [data-theme="dark"] .info-card h3,
    [data-theme="dark"] .info-card h4 {
        color: var(--text-dark) !important;
    }

    [data-theme="dark"] .info-card p {
        color: var(--text-light) !important;
    }

    [data-theme="dark"] .trip-details-container {
        background: var(--background) !important;
    }

    [data-theme="dark"] .trip-header h1 {
        color: var(--text-dark) !important;
    }

    [data-theme="dark"] .trip-header p {
        color: var(--text-light) !important;
    }
</style>