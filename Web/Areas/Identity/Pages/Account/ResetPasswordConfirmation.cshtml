@page
@model ResetPasswordConfirmationModel
@{
    ViewData["Title"] = "Password Reset Successful";
}

<section class="form-container col-12" aria-label="Success Section">
    <div class="form-container-div col-4">
        <!-- Header with Logo -->
        <div class="auth-header">
            <div class="logo-container">
                <img src="~/images/elhaq.jpg" alt="El7aq Logo" class="auth-logo" />
                <h2>Password Reset Successful</h2>
                <p class="auth-subtitle">Your password has been changed successfully</p>
            </div>
        </div>

        <!-- Success Message -->
        <div class="alert alert-success text-center" role="alert">
            <i class="fas fa-check-circle fa-3x mb-3 text-success"></i>
            <h4>All Set!</h4>
            <p class="mb-3">
                Your password has been successfully reset. You can now log in with your new password.
            </p>
            <p class="mb-0">
                <strong>Keep your password secure</strong> and don't share it with anyone.
            </p>
        </div>

        <!-- Action Button -->
        <div class="text-center">
            <div class="d-grid">
                <a asp-page="./Login" class="btn btn-primary btn-lg">
                    <i class="fas fa-sign-in-alt me-2"></i>Log In Now
                </a>
            </div>
            
            <p class="text-muted mt-3">
                <small>
                    <i class="fas fa-shield-alt me-1"></i>
                    For your security, please make sure to log out from all other devices.
                </small>
            </p>
        </div>
    </div>
</section>
