@page
@model EmailModel
@{
    ViewData["Title"] = "Manage Email";
    ViewData["ActivePage"] = ManageNavPages.Email;
}


<partial name="_StatusMessage" for="StatusMessage" />
<section class="form-container col-12" aria-label="Login Form Section">

    <div class="form-container-div col-4">
        <h2>Login Form</h2>
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
        <form id="email-form" method="post">
            <div asp-validation-summary="All" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Email" type="email" placeholder="Please enter your email." disabled />
                </div>
            
            <div class="form-floating mb-3">
                <input asp-for="Input.NewEmail" type="email" autocomplete="email" aria-required="true" placeholder="Please enter new email." />

                <span asp-validation-for="Input.NewEmail" class="text-danger"></span>
            </div>

            <div>
                <button id="login-submit" type="submit">Change email</button>
            </div>
        </form>

    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
