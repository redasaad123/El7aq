@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<partial name="_StatusMessage" for="StatusMessage" />



<section class="form-container col-12" aria-label="Login Form Section">

    <div class="form-container-div col-4">
        <h3>@ViewData["Title"]</h3>
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Username" type="email" placeholder="Please choose your username." disabled />

            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.PhoneNumber" type="text" placeholder="Please enter your phone number." />

                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div>
                <button id="update-profile-button" type="submit">Save</button>
            </div>


        </form>

    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
