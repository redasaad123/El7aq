@page
@model ForgotPasswordConfirmation
@{
    ViewData["Title"] = "Check Your Email";
}

<section class="form-container col-12" aria-label="Confirmation Section">
    <div class="form-container-div col-4">
        <!-- Header with Logo -->
        <div class="auth-header">
            <div class="logo-container">
                <img src="~/images/elhaq.jpg" alt="El7aq Logo" class="auth-logo" />
                <h2>Check Your Email</h2>
                <p class="auth-subtitle">We've sent you a verification code</p>
            </div>
        </div>

        <!-- Success Message -->
        <div class="alert alert-success text-center" role="alert">
            <i class="fas fa-key fa-3x mb-3"></i>
            <h4>Verification Code Sent!</h4>
            <p class="mb-3">
                We've sent a 6-digit verification code to your email address. 
                Please check your inbox and enter the code to continue.
            </p>
            <p class="mb-0">
                <strong>Don't see the email?</strong> Check your spam or junk folder.
            </p>
        </div>

        <!-- Additional Information -->
        <div class="text-center">
            <p class="text-muted mb-3">
                <small>
                    <i class="fas fa-clock me-1"></i>
                    The verification code will expire in 10 minutes for security reasons.
                </small>
            </p>
            
            <!-- Action Buttons -->
            <div class="d-grid gap-2">
                <a asp-page="./VerifyCode" class="btn btn-primary">
                    <i class="fas fa-key me-2"></i>Enter Verification Code
                </a>
                <a asp-page="./ForgotPassword" class="btn btn-outline-primary">
                    <i class="fas fa-redo me-2"></i>Send Another Code
                </a>
                <a asp-page="./Login" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Back to Login
                </a>
            </div>
        </div>
    </div>
</section>
