@page
@model Web.Areas.Identity.Pages.Account.RegisterStaffModel
@{
    ViewData["Title"] = "Register Staff";
}

<div class="container" style="margin-top: 120px; max-width: 700px;">
    <div class="card" style="border: none; border-radius: 20px; box-shadow: 0 10px 30px rgba(0,0,0,0.08);">
        <div class="card-header" style="background: linear-gradient(135deg, #667eea, #764ba2); color: white; border-radius: 20px 20px 0 0; padding: 1.25rem 1.5rem;">
            <h4 class="mb-0"><i class="fas fa-user-cog me-2"></i>Register Staff</h4>
        </div>
        <div class="card-body" style="padding: 2rem;">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="Input.FirstName" class="form-label"></label>
                        <input asp-for="Input.FirstName" class="form-control" />
                        <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Input.LastName" class="form-label"></label>
                        <input asp-for="Input.LastName" class="form-control" />
                        <span asp-validation-for="Input.LastName" class="text-danger"></span>
                    </div>

                    <div class="col-12">
                        <label asp-for="Input.Email" class="form-label"></label>
                        <input asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Input.Password" class="form-label"></label>
                        <input asp-for="Input.Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Input.ConfirmPassword" class="form-label"></label>
                        <input asp-for="Input.ConfirmPassword" class="form-control" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div class="col-12">
                        <label asp-for="Input.StationId" class="form-label"></label>
                        <select asp-for="Input.StationId" class="form-select" asp-items="@(new SelectList(Model.Stations, nameof(Core.Entities.Station.Id), nameof(Core.Entities.Station.Name)))">
                            <option value="">-- Select Station --</option>
                        </select>
                        <span asp-validation-for="Input.StationId" class="text-danger"></span>
                    </div>
                </div>

                <div class="d-flex justify-content-between align-items-center mt-4">
                    <a asp-controller="Manager" asp-action="ManagerHome" class="btn btn-outline-secondary" style="border-radius: 25px;">
                        <i class="fas fa-arrow-left me-2"></i>Back to Dashboard
                    </a>
                    <button type="submit" class="btn btn-primary" style="border-radius: 25px; padding: 0.5rem 1.5rem; background: linear-gradient(135deg, #667eea, #764ba2); border: none;">
                        <i class="fas fa-plus me-2"></i>Create Staff
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<partial name="_ValidationScriptsPartial" />

<style>
    [data-theme="dark"] .card { background: #2D2D2D !important; box-shadow: 0 10px 30px rgba(0,0,0,0.3) !important; }
    [data-theme="dark"] .card .text-muted { color: rgba(255,255,255,0.7) !important; }
    [data-theme="dark"] .form-control, [data-theme="dark"] .form-select { background: #1f1f1f; color: #fff; border-color: #444; }
    [data-theme="dark"] .form-control:focus, [data-theme="dark"] .form-select:focus { border-color: #666; box-shadow: none; }
</style>


