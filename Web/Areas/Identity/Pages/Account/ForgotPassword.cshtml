@page
@model ForgotPasswordModel

@{
    ViewData["Title"] = "Forgot your password?";
}


<section class="form-container col-12" aria-label="Login Form Section">

    <div class="form-container-div col-4">
        <h2>Enter your email</h2>
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
        <form  method="post">
            <div class=" mb-3">
                <input asp-for="Input.Email" type="email" placeholder="Email Address" aria-label="Email Address" required />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div>
                <button id="login-submit" type="submit">Enter</button>
            </div>
        </form>

    </div>
</section>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

